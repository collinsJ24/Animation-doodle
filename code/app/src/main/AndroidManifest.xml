<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca326.com.activities">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/test_logo"
        android:label="Animation Doodle"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label,android:icon">

        <activity
            android:name=".Main_Menu_Screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".Top_Rated_Screen"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/topRated"/>

        <activity
            android:name=".Sign_In_Screen"
            android:label="@string/title_activity_sign__in__screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Start_Drawing_Screen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>


        <activity
            android:name=".Intro_Animation_Transition_Screen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Register_Screen"
            android:label="@string/title_activity_register__screen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Profile_Screen"
            android:configChanges="orientation"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".Play_Animation_Screen"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Test_VideoPlayer"
            android:configChanges="orientation" />

        <activity
            android:name=".Settings_Screen"
            android:label="Settings"
            android:theme="@style/AppThemeAction"/>
        <!-- Special Views -->

    </application>

</manifest>